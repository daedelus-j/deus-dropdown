@import '../node_modules/font-awesome/css/font-awesome.css'

a
  text-decoration: none

.deus-dd-cont
  display: inline-block

.deus-dd-drop-cont
  display: none

.deus-dd-active
  .deus-dd-drop-cont
    display: block

.deus-dd-items
  list-style: none

.deus-dd-item-btn
  i.fa
    display: none
  &.item-selected
    i.fa
      display: inline-block
  &.item-active
    background: blue
    color: white
  &.item-inactive
    display: none

.empty-item
  display: none

.empty-search
  .empty-item
    display: block
  .deus-dd-items
    display: none
